{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Post",
    "additionalProperties": false,
    "definitions": {
        "minInt": { "type": "integer", "minimum": 0 },
        "tags": {
            "items": { "$ref": "#/definitions/minInt" },
            "uniqueItems": true,
            "type": "array"
        }
    },
    "properties": {
        "_id": { "type": "string" },
        "author": { "$ref": "#/definitions/minInt" },
        "content": { "type": "string" },
        "created": { "type": "string", "format": "date-time" },
        "excerpt": { "type": "string" },
        "format": { "enum": [ "quote", "standard" ], "type": "string" },
        "id": { "$ref": "#/definitions/minInt" },
        "modified": { "type": "string", "format": "date-time" },
        "slug": { "type": "string" },
        "status": { "enum": [ "draft", "publish"], "type": "string" },
        "sticky": { "type": "boolean" },
        "subtitle": { "type": "string" },
        "tags": { "$ref": "#/definitions/tags" },
        "title": { "type": "string" },
        "type": { "enum": [ "page", "post" ], "type": "string" }
    },
    "required": [
        "_id",
        "author",
        "content",
        "created",
        "excerpt",
        "format",
        "id",
        "slug",
        "status",
        "sticky",
        "tags",
        "title",
        "type"
    ],
    "type": "object"
}
