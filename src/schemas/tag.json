{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Tag",
    "additionalProperties": false,
    "definitions": {
        "minInt": { "type": "integer", "minimum": 0 },
        "tags": {
            "items": { "$ref": "#/definitions/minInt" },
            "uniqueItems": true,
            "type": "array"
        }
    },
    "properties": {
        "_id": { "type": "string" },
        "count": { "type": "integer" },
        "created": { "type": "string", "format": "date-time" },
        "description": { "type": "string" },
        "id": { "type": "integer" },
        "modified": { "type": "string", "format": "date-time" },
        "slug": { "type": "string" },
        "taxonomy": { "enum": [ "categories", "tags" ], "type": "string" },
        "title": { "type": "string" }
    },
    "required": [
        "description",
        "title",
        "taxonomy"
    ],
    "type": "object"
}
